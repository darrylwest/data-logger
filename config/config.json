{
    "config-version": "0.6.1-107",
    "home": "{{HOME}}/.data-logger",
    "logging": {
        "level": "info",
        "folder": "logs",
        "file": "none"
    },
    "data": {
        "folder": "data",
        "temperature": "/temperature",
        "status": "/status"
    },
    "webservice": {
        "scheme": "http",
        "host": "0.0.0.0",
        "port": 9090,
        "www": "html",
        "tls_cert_file": ".ssh/cert.pem",
        "tls_key_file": ".ssh/key.pem",
        "headers": [ ]
    },
    "clients": [
        {
            "location": "front-porch",
            "ip": "10.0.1.197",
            "port": 2030,
            "active": true,
            "sensors": [
                {
                    "type": "temperature",
                    "path": "/temps",
                    "probes": [
                        { "sensor": 0, "location": "probe.0", "enabled": true },
                        { "sensor": 1, "location": "probe.1", "enabled": false}
                    ]
                }
            ]
        },
        {
            "location": "deck",
            "ip": "10.0.1.177",
            "port": 2030,
            "active": true,
            "sensors": [
                {
                    "type": "temperature",
                    "path": "/temps",
                    "probes": [
                        { "sensor": 0, "location": "probe.0", "enabled": true },
                        { "sensor": 1, "location": "probe.1", "enabled": false }
                    ]
                }
            ]
        },
        {
            "location": "shed",
            "ip": "10.0.1.115",
            "port": 2030,
            "active": false,
            "sensors": [
                {
                    "type": "temperature",
